{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [
    {
      "matchPackageNames": [
        "^sanity",
        "^@sanity",
        "^@portabletext/",
        "^groq",
        "^next-sanity"
      ],
      "groupName": "sanity packages"
    },
    {
      "matchPackageNames": ["^react"],
      "excludePackagePatterns": ["^react-aria", "^react-hook"],
      "groupName": "react packages"
    },
    {
      "matchPackageNames": [
        "^@react-aria",
        "^react-aria",
        "^tailwindcss-react-aria"
      ],
      "groupName": "react-aria packages"
    },
    {
      "matchPackageNames": ["^@happy-dom/", "^happy-dom"],
      "groupName": "happy-dom packages"
    },
    {
      "matchPackageNames": [
        "^@obosbbl/grunnmuren-",
        "^tailwindcss",
        "^tailwind",
        "^postcss"
      ],
      "groupName": "design system packages"
    },
    {
      "matchPackageNames": [
        "@obosbbl/grunnmuren-tailwind",
        "@obosbbl/grunnmuren-react"
      ],
      "allowedVersions": "!/2\\.0\\.0/"
    },
    {
      "matchPackageNames": ["^@code-obos"],
      "groupName": "@code-obos packages"
    },
    {
      "matchPackageNames": ["^@code-obos/sanity"],
      "groupName": "OBOS sanity packages"
    },
    {
      "matchPackageNames": ["^@sentry", "^@code-obos/sentry-config-dkt"],
      "groupName": "Sentry packages"
    },
    {
      "matchPackageNames": ["^next", "^@next"],
      "excludeDepNames": ["next-sanity"],
      "groupName": "next packages"
    },
    {
      "matchPackageNames": ["^react-hook-form", "^@hookform"],
      "groupName": "react-hook-form packages"
    },
    {
      "matchPackageNames": ["^headlessui"],
      "groupName": "headlessui packages"
    },
    {
      "matchPackageNames": ["^@azure"],
      "groupName": "azure packages"
    },
    {
      "matchPackageNames": ["^@vitejs", "^vite"],
      "groupName": "vite packages"
    },
    {
      "matchPackageNames": ["^vitest"],
      "groupName": "vitest packages"
    },
    {
      "matchPackageNames": ["^actions"],
      "groupName": "GHA actions"
    },
    {
      "matchPackageNames": ["^docker/"],
      "groupName": "Docker packages"
    },
    {
      "matchPackageNames": ["hono", "honox"],
      "matchPackagePrefixes": ["@hono"],
      "groupName": "Hono"
    },
    {
      "matchPackageNames": ["^docker"],
      "matchDepTypes": "action",
      "groupName": "Docker packages"
    }
  ]
}
