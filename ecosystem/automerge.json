{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "description": "Automerge changes to lockfiles, and `patch` updates to `dependencies`, `devDependencies`, and `resolutions`.",
  "lockFileMaintenance": { "automerge": true },
  "packageRules": [
    {
      "automerge": true,
      "matchDepTypes": ["dependencies", "devDependencies", "resolutions"],
      "matchUpdateTypes": ["patch"]
    }
  ]
}
