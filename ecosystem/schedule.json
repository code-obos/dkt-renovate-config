{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "timezone": "Europe/Oslo",
  "extends": [
    "github>code-obos/dkt-renovate-presets//ecosystem/schedule-limits"
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": [
      "before 6am on Saturday on the first week of the month every 3rd month"
    ]
  },
  "packageRules": [
    {
      "depTypeList": [
        "dependencies",
        "devDependencies",
        "peerDependencies",
        "resolutions"
      ],
      "schedule": ["before 6am on Saturday"]
    }
  ]
}
