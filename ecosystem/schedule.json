{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "github>code-obos/dkt-renovate-presets//ecosystem/schedule-limits"
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": ["every weekend on the 1st through 6th day of the month every 3rd month"]
  },
  "packageRules": [
    {
      "depTypeList": [
        "dependencies",
        "devDependencies",
        "peerDependencies",
        "resolutions"
      ],
      "schedule": ["on saturday"]
    }
  ]
}
